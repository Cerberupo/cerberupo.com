---
import {useTranslations} from "../i18n/utils";
import Container from "../layouts/Container.astro";
import {Image} from 'astro:assets';
import Flex from "../layouts/Flex.astro";
import {StyleSPEnum} from "../styles/enums/sp.enum";
import {StyleFlexDirectionEnum} from "../styles/enums/flex-direction.enum";
import {StyleAlignItemsEnum} from "../styles/enums/align-items.enum";
import {StyleJustifyContentEnum} from "../styles/enums/justify-content.enum";
import Box from "../layouts/Box.astro";
import Cat from "../images/cat.svg";
import {StyleFSEnum} from "../styles/enums/fs.enum";
import {StyleFWEnum} from "../styles/enums/fw.enum";
import Text from "../layouts/Text.astro";
import NoCompanyLogo from '../images/projects/no-company-logo.webp';
import Spacer from "../layouts/Spacer.astro";
const {t} = useTranslations(Astro.url);
---
<section>
    <Container>
        <Flex direction={{tabletH: StyleFlexDirectionEnum.COLUMN, default: StyleFlexDirectionEnum.ROW}}
              justifyContent={StyleJustifyContentEnum.SPACE_BETWEEN}
              alignItems={StyleAlignItemsEnum.CENTER}
              gap={{tabletH: StyleSPEnum.SP0, default: StyleSPEnum.SP64}}>

            <Box class="image-container">
                <Image src={Cat} alt={t('section.cat.cat')} loading="eagle"/>
            </Box>

            <Box class="text-container">
                <Text fontSize={StyleFSEnum.FS14} fontWeight={StyleFWEnum.LIGHT}>
                    {t('section.cat.date')}
                </Text>
                <Spacer size={StyleSPEnum.SP8}/>
                <Flex direction={StyleFlexDirectionEnum.ROW}
                      justifyContent={StyleJustifyContentEnum.START}
                      alignItems={StyleAlignItemsEnum.CENTER}
                      gap={StyleSPEnum.SP8}>
                    <Image class="company-image" src={NoCompanyLogo}
                           alt="FlyingDonkey logo" loading="eagle"/>
                    <Text fontSize={StyleFSEnum.FS16} fontWeight={StyleFWEnum.REGULAR}>
                        FlyingDonkey
                    </Text>
                </Flex>
                <Spacer size={StyleSPEnum.SP16}/>
                <Text fontSize={StyleFSEnum.FS14}>
                    <Fragment set:html={t('section.cat.description')}/>
                </Text>
            </Box>

        </Flex>
    </Container>
</section>
<style lang="scss">
  @import "../styles/vars";

  .company-image {
    max-width: 26px;
    max-height: 26px;
    border: 1px solid $logoBorder;
    border-radius: 8px;
    overflow: hidden;
  }

  .text-container, .image-container {
    max-width: 50%;
  }

  @media all and (max-width: $mediaTabletHorizontal) {
    .text-container, .image-container {
      max-width: 100%;
    }
    .text-container {
      padding-top: $sp32;
    }
  }
</style>