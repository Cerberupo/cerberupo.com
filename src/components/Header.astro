---
import {useTranslations} from "../i18n/utils";
import Container from "../layouts/Container.astro";
import {Image} from 'astro:assets';
import ImageOfMe from '../images/me.webp';
import Flex from "../layouts/Flex.astro";
import {StyleSPEnum} from "../styles/enums/sp.enum";
import {StyleFlexDirectionEnum} from "../styles/enums/flex-direction.enum";
import Spacer from "../layouts/Spacer.astro";
import Text from "../layouts/Text.astro";
import {StyleFSEnum} from "../styles/enums/fs.enum";
import {StyleAlignItemsEnum} from "../styles/enums/align-items.enum";
import Box from "../layouts/Box.astro";
import {StyleFWEnum} from "../styles/enums/fw.enum";
import Tag from "./Tag.astro";
import {TagEnum} from "../enums/tag.enum";
import {StyleFlexWrapEnum} from "../styles/enums/flex-wrap.enum";
const {t} = useTranslations(Astro.url);
---

<header>
    <Container class="" pt pb>
        <Flex direction={{tabletH: StyleFlexDirectionEnum.COLUMN, default: StyleFlexDirectionEnum.ROW}}
              alignItems={StyleAlignItemsEnum.CENTER}
              gap={{default: StyleSPEnum.SP64, mobile: StyleSPEnum.SP32}}>
            <Image src={ImageOfMe} alt={t('header.imageAlt')} loading="eager"/>
            <Box>
                <Text as="h1" fontSize={{default: StyleFSEnum.FS32, mobile: StyleFSEnum.FS24}}
                      fontWeight={StyleFWEnum.MEDIUM}>
                    Jaime GÃ³mez Cimarro
                </Text>
                <Spacer size={StyleSPEnum.SP16}/>
                <Flex direction={StyleFlexDirectionEnum.ROW}>
                    <Text as="h2" fontSize={StyleFSEnum.FS20}>
                        {t('header.fullstack')}
                    </Text>
                </Flex>
                <Spacer size={StyleSPEnum.SP16}/>
                <Text fontSize={StyleFSEnum.FS14}>
                    {t('header.description')}
                </Text>
                <Spacer size={StyleSPEnum.SP8}/>
                <Text fontSize={StyleFSEnum.FS16}>
                    {t('header.preferredTechnologies')}
                </Text>
                <Spacer size={StyleSPEnum.SP4}/>
                <Flex wrap={StyleFlexWrapEnum.WRAP} gap={StyleSPEnum.SP4}>
                    <Tag name={TagEnum.REACT}/>
                    <Tag name={TagEnum.NODE_JS}/>
                    <Tag name={TagEnum.MONGO_DB}/>
                    <Tag name={TagEnum.AWS}/>
                </Flex>
            </Box>
        </Flex>

    </Container>
</header>

<style lang="scss">
  @import "../styles/vars";

  header {
    background-color: $headerBg;
    z-index: 2;
    position: relative;
  }

  img {
    max-width: 340px;
    max-height: 447px;
    border-radius: 10px;
    @media all and (max-width: $mobileSmall) {
      max-width: 100%;
    }
  }
</style>