---
import {AsEnum} from "../enums/as.enum";
import Box from "./Box.astro";
import {StyleSPEnum} from "../styles/enums/sp.enum";
interface Props {
    size: StyleSPEnum;
}

let {size} = Astro.props;
if (!size) size = StyleSPEnum.SP16;
const styleVars = {size};
---
<Box as={AsEnum.DIV} styleVars={styleVars} class="spacer"/>

<style lang="scss" define:vars={styleVars}>
  .spacer {
    height: var(--size);
    width: 100%;
    clear: both;
  }
</style>